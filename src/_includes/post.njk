  <title>{{ title }}</title>
  <meta name="description" content="{{ description | default('Islamic Knowledge Site') }}" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ description }}">
  <meta name="twitter:card" content="summary" />
  <link rel="stylesheet" href="./../../public/style.css">
</head>
<body>
  <main>
    <a href="/" style="font-size: 0.8rem; color: indianred;"> Go Back Home</a>

    <div style="height: 1rem;"></div>


    <h1 style="font-size: 1.7rem; line-height: 0.2rem;">{{ title }}</h1>
    <h4 style="font-size: 0.9rem; line-height: 1.8rem; color: gray;">{{ description }}</h4>

    {{ content | safe }}
  </main>
</body>
</html>
